@model MvcTrainingHub.Entities.Concrete.Category
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content pt-2">
    <!-- üst boşluk azaltıldı -->
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm border-0 rounded-3">
                    <div class="card-header bg-white d-flex align-items-center">
                        <h5 class="mb-0 text-dark fw-bold">
                            <i class="fas fa-plus-circle text-success me-2"></i> Add New Category
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="text-muted mb-4">Please enter a descriptive name and brief explanation.</p>

                        @using (Html.BeginForm("AddCategory", "AdminCategory", FormMethod.Post))
                        {
                            <div class="mb-3">
                                @Html.LabelFor(x => x.CategoryName, "Category Name", htmlAttributes: new { @class = "form-label fw-semibold" })
                                @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control", placeholder = "Enter category name" })
                                @Html.ValidationMessageFor(x => x.CategoryName, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3">
                                @Html.LabelFor(x => x.CategoryDescription, "Description", htmlAttributes: new { @class = "form-label fw-semibold" })
                                @Html.TextBoxFor(x => x.CategoryDescription, new { @class = "form-control", placeholder = "Enter description" })
                                @Html.ValidationMessageFor(x => x.CategoryDescription, "", new { @class = "text-danger" })
                            </div>

                            <div class="d-flex justify-content-end mt-3">
                                <button type="submit" class="btn btn-success px-4">
                                    <i class="fas fa-save me-1"></i> Save Category
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
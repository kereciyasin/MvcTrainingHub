@model MvcTrainingHub.Entities.Concrete.Category

@{
    ViewBag.Title = "Update Category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content pt-2">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm border-0 rounded-3">
                    <div class="card-header bg-white d-flex align-items-center">
                        <h5 class="mb-0 text-dark fw-bold">
                            <i class="fas fa-edit text-warning me-2"></i> Edit Category
                        </h5>
                    </div>
                    <div class="card-body">
                        <p class="text-muted mb-4">You can update the category name and description below.</p>

                        @using (Html.BeginForm("UpdateCategory", "AdminCategory", FormMethod.Post))
                        {
                            @Html.HiddenFor(x => x.CategoryID)

                            <div class="mb-3">
                                @Html.LabelFor(x => x.CategoryName, "Category Name", new { @class = "form-label fw-semibold" })
                                @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control", placeholder = "Enter category name" })
                                @Html.ValidationMessageFor(x => x.CategoryName, "", new { @class = "text-danger" })
                            </div>

                            <div class="mb-3">
                                @Html.LabelFor(x => x.CategoryDescription, "Description", new { @class = "form-label fw-semibold" })
                                @Html.TextBoxFor(x => x.CategoryDescription, new { @class = "form-control", placeholder = "Enter description" })
                                @Html.ValidationMessageFor(x => x.CategoryDescription, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-check mb-3">
                                @Html.CheckBoxFor(x => x.CategoryStatus, new { @class = "form-check-input" })
                                @Html.LabelFor(x => x.CategoryStatus, "Is Active?", new { @class = "form-check-label" })
                            </div>

                            <div class="d-flex justify-content-end mt-3">
                                <button type="submit" class="btn btn-warning px-4">
                                    <i class="fas fa-save me-1"></i> Update Category
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

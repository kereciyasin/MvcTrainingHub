@model MvcTrainingHub.Entities.Concrete.Category

@{
    Layout = null;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-header bg-dark text-white text-center">
                    <h4 class="mb-0"><i class="bi bi-folder-plus me-2"></i> Add New Category</h4>
                </div>
                <div class="card-body p-4">
                    @using (Html.BeginForm("AddCategory", "Category", FormMethod.Post))
                    {
                        <div class="mb-3">
                            @Html.LabelFor(x => x.CategoryName, "Category Name", new { @class = "form-label fw-semibold mb-2" })
                            @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control", placeholder = "Enter category name" })
                            @Html.ValidationMessageFor(x => x.CategoryName, "", new { @class = "text-danger small" })
                        </div>

                        <div class="mb-4">
                            @Html.LabelFor(x => x.CategoryDescription, "Description", new { @class = "form-label fw-semibold mb-2" })
                            @Html.TextBoxFor(x => x.CategoryDescription, new { @class = "form-control", placeholder = "Enter category description" })
                            @Html.ValidationMessageFor(x => x.CategoryDescription, "", new { @class = "text-danger small" })
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-check-circle me-1"></i> Save Category
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
